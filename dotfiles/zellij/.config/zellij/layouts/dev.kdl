layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    pane_template name="tests_under_files" {
        pane split_direction="horizontal" {
            pane name="Check -A warns" command="sh" size="50%" {
                args "-c" "RUSTFLAGS='-A warnings' cargo check"
            }
            pane name="Test" command="cargo" size="45%" {
            	args "test"
            }
            pane name="Clean" command="cargo" size="5%" {
            	args "clean"
            }
        }
    }
    tab_template name="strider_tab" {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        pane split_direction="Vertical" {
            pane command="tree" size="15%" {
                // TODO: when we support sending CWD to plugins, this should start in ./zellij-derver
                args "-L" "3" "-a"
            }
            children
        }
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
//==================================================================================
    tab name="Dev1" split_direction="vertical"  {
    	pane
    }
//==================================================================================
    tab name="Dev2" split_direction="vertical"  {
    	pane
    	pane split_direction="horizontal"  {
    		pane
    		pane
    	}
    }
//==================================================================================
    tab name="Dev3" split_direction="vertical"  {
    	pane
    	pane split_direction="vertical"  {
    		pane
    		pane
    	}
    }
//==================================================================================
    tab name="Dev4" split_direction="vertical" {
    	pane
    	pane split_direction="horizontal"  {
    		pane
    		pane
    	}
    }
//==================================================================================
    tab name="Dev5" split_direction="vertical" {
    	pane
    	pane split_direction="horizontal" stacked=true {
    		pane
    		pane
    	}
    }
//==================================================================================
    tab name="Dev6" split_direction="vertical" {
    	pane
    	pane split_direction="horizontal" stacked=true {
    		pane
    		pane
    	}
    }
}
